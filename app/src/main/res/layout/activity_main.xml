<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4ECA5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/wpisz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wpisz dwie liczby"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.154" />

    <Button
        android:id="@+id/buttonZatwierdz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="ZatwierdÅº"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wpisz" />

    <EditText
        android:id="@+id/fst_num_txt"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="104dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wpisz" />

    <EditText
        android:id="@+id/snd_num_txt"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginEnd="140dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wpisz" />

    <TextView
        android:id="@+id/resultTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FF8989AA"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonZatwierdz"
        app:layout_constraintStart_toStartOf="@+id/buttonZatwierdz"
        app:layout_constraintTop_toBottomOf="@+id/buttonZatwierdz" />

</androidx.constraintlayout.widget.ConstraintLayout>